<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navition.xml"
    app:startDestination="@id/nav_upcoming">

    <fragment
        android:id="@+id/nav_upcoming"
        android:name="com.examplepokedex.igormattos.tvshowapp.view.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/home_fragment">
        <action
            android:id="@+id/action_nav_upcoming_to_nav_popular"
            app:destination="@id/nav_popular" />
    </fragment>

    <fragment
        android:id="@+id/nav_popular"
        android:name="com.examplepokedex.igormattos.tvshowapp.view.PopularFragment"
        android:label="HomeFragment"
        tools:layout="@layout/home_fragment"/>
</navigation>